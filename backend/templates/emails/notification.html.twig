{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ title|default('Notification') }}</h2>
    <p>{{ message|raw }}</p>
    {% if action_url is defined and action_label is defined %}
        <p><a href="{{ action_url }}" style="display:inline-block;padding:10px 20px;background:#007bff;color:#fff;text-decoration:none;border-radius:4px;">{{ action_label }}</a></p>
    {% endif %}
{% endblock %} 